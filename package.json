{
	"name": "codeandrun-blog",
	"version": "9.0.0",
	"description": "Code and run blog repository.",
	"type": "module",
	"scripts": {
		"build": "npx @11ty/eleventy --quiet",
		"build:prod": "cross-env ELEVENTY_ENV=production npx @11ty/eleventy --quiet",
		"build-nocolor": "cross-env NODE_DISABLE_COLORS=1 npx @11ty/eleventy --quiet",
		"build-ghpages": "npx @11ty/eleventy --pathprefix=/eleventy-base-blog/ --quiet",
		"start": "npx @11ty/eleventy --serve --quiet",
		"start-ghpages": "npx @11ty/eleventy --pathprefix=/eleventy-base-blog/ --serve --quiet",
		"debug": "cross-env DEBUG=Eleventy* npx @11ty/eleventy",
		"debugstart": "cross-env DEBUG=Eleventy* npx @11ty/eleventy --serve --quiet",
		"benchmark": "cross-env DEBUG=Eleventy:Benchmark* npx @11ty/eleventy",
		"migrate:test": "node test-migration.js",
		"migrate:wordpress": "node migrate-to-wordpress.js",
		"migrate:fix-images": "node fix-image-paths.js"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/alexmufatti/codeandrun_11ty"
	},
	"author": {
		"name": "Alex Mufatti",
		"email": "me@alexmufatti.it",
		"url": "https://alexmufatti.it/"
	},
	"license": "MIT",
	"engines": {
		"node": ">=18"
	},
	"homepage": "https://codeandrun.it",
	"devDependencies": {
		"@11ty/eleventy": "^3.1.2",
		"@11ty/eleventy-img": "^6.0.4",
		"@11ty/eleventy-navigation": "^1.0.4",
		"@11ty/eleventy-plugin-rss": "^2.0.4",
		"@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
		"cross-env": "^10.0.0",
		"glob": "^11.0.3",
		"luxon": "^3.7.1",
		"marked": "^16.3.0",
		"prismjs": "^1.30.0",
		"zod": "^4.1.5",
		"zod-validation-error": "^4.0.1"
	},
	"dependencies": {
		"@11ty/eleventy-upgrade-help": "^3.0.1",
		"@zachleat/heading-anchors": "^1.0.3"
	}
}
